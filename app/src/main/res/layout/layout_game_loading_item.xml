<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardElevation="0dp"
    android:baselineAligned="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="w,1:1"
            android:background="@drawable/bg_rounded"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewTitle"
            android:layout_width="110dp"
            android:layout_height="14dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded"
            app:layout_constraintStart_toStartOf="@id/viewImage"
            app:layout_constraintTop_toBottomOf="@id/viewImage" />

        <View
            android:id="@+id/viewRating"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:background="@drawable/bg_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/viewTitle" />

        <View
            android:id="@+id/viewReleased"
            android:layout_width="150dp"
            android:layout_height="11dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_rounded"
            app:layout_constraintStart_toStartOf="@id/viewImage"
            app:layout_constraintTop_toBottomOf="@id/viewTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewImage2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="w,1:1"
            android:background="@drawable/bg_rounded"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewTitle2"
            android:layout_width="110dp"
            android:layout_height="14dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded"
            app:layout_constraintStart_toStartOf="@id/viewImage2"
            app:layout_constraintTop_toBottomOf="@id/viewImage2" />

        <View
            android:id="@+id/viewRating2"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:background="@drawable/bg_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/viewTitle2" />

        <View
            android:id="@+id/viewReleased2"
            android:layout_width="150dp"
            android:layout_height="11dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_rounded"
            app:layout_constraintStart_toStartOf="@id/viewImage2"
            app:layout_constraintTop_toBottomOf="@id/viewTitle2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>